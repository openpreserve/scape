<?xml version="1.0" encoding="utf-8" ?>
<tool xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://scape-project.eu/tool tool-1.0_draft.xsd" xmlns="http://scape-project.eu/tool" xmlns:xlink="http://www.w3.org/1999/xlink" schemaVersion="1.0" name="GStreamer" version="1.0" homepage="http://gstreamer.freedesktop.org/">
  <installation>
    <dependency operatingSystemName="Debian">gstreamer-tools,gstreamer0.10-plugins-good,gstreamer0.10-ffmpeg,gstreamer0.10-plugins-ugly,gstreamer0.10-plugins-bad</dependency>
    <license type="Apache Licence 2.0">Apache License, Version 2.0</license>
  </installation>
  <otherProperties>
    <property name="cost">0</property>
  </otherProperties>
  <operations>
    <operation name="digital-preservation-migration-audio-gstreamer-mp32flac">
      <description>Converts an audio file in MP3 to Flac using GStreamer</description>
      <command>gst-launch-0.10 filesrc location=${input} ! mad ! audioconvert ! flacenc ! filesink location=${output}</command>
      <inputs>
        <input name="input" required="true">
          <description>Reference to input file</description>
        </input>
      </inputs>
      <outputs>
        <output name="output" required="true">
          <description>Reference to output file</description>
          <extension>flac</extension>
        </output>
      </outputs>
    </operation>
  </operations>
</tool>

