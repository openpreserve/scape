<?xml version="1.0" encoding="utf-8" ?>
<?meta name="GENERATOR" content="XML::Smart/1.6.9 Perl/5.014002 [linux]" ?>
<tool xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://scape-project.eu/tool tool-1.0_draft.xsd" xmlns="http://scape-project.eu/tool" xmlns:xlink="http://www.w3.org/1999/xlink" schemaVersion="1.0" name="DROID" version="1.0" homepage="http://www.nationalarchives.gov.uk/information-management/our-services/dc-file-profiling-tool.htm">
  <otherProperties>
    <property name="cost">0</property>
  </otherProperties>
  <operations>
    <operation name="digital-preservation-identification-droid-folder2csv">
      <description>Identifies the content of a folder recursively using the DROID tool. DROID 6.1 needs to be installed at /usr/local/scape/droid6.1/.</description>
      <command>/usr/share/digital-preservation-identification-droid-folder2csv/digital-preservation-identification-droid-folder2csv.sh ${input} ${output}</command>
      <inputs>
        <input name="input" required="true">
          <description>Reference to input folder</description>
        </input>
      </inputs>
      <outputs>
        <output name="output" required="true">
          <description>Reference to output file</description>
          <extension>csv</extension>
        </output>
      </outputs>
    </operation>
  </operations>
</tool>

