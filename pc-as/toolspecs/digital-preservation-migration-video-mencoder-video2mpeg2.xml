<?xml version="1.0" encoding="utf-8" ?>
<?meta name="GENERATOR" content="XML::Smart/1.6.9 Perl/5.014002 [linux]" ?>
<tool xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://scape-project.eu/tool tool-1.0_draft.xsd" xmlns="http://scape-project.eu/tool" xmlns:xlink="http://www.w3.org/1999/xlink" schemaVersion="1.0" name="Mencoder" version="1.0" homepage="http://www.mplayerhq.hu/">
  <installation>
    <dependency operatingSystemName="Debian">mencoder</dependency>
    <license type="Apache Licence 2.0">Apache License, Version 2.0</license>
  </installation>
  <otherProperties>
    <property name="cost">0</property>
  </otherProperties>
  <operations>
    <operation name="digital-preservation-migration-video-mencoder-video2mpeg2">
      <description>Converts any Mencoder supported video format to MPEG2</description>
      <command>mencoder -quiet -of mpeg -ovc lavc -oac lavc -lavcopts vcodec=mpeg2video:acodec=ac3 ${input} -o ${output}</command>
      <inputs>
        <input name="input" required="true">
          <description>Reference to input file</description>
        </input>
        <parameter name="params" required="false">
          <description>Additional conversion parameters</description>
        </parameter>
      </inputs>
      <outputs>
        <output name="output" required="true">
          <description>Reference to output file</description>
          <extension>mpeg</extension>
        </output>
      </outputs>
    </operation>
  </operations>
</tool>

